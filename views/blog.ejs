            color: var(--secondary);
        }
        
        .featured-title a {
            color: inherit;
            text-decoration: none;
            transition: color 0.2s;
        }
        
        .featured-title a:hover {
            color: var(--primary);
        }
        
        .featured-excerpt {
            color: #666;
            margin-bottom: 1.5rem;
            font-size: 1rem;
        }
        
        .featured-meta {
            display: flex;
            justify-content: space-between;
            margin-top: auto;
        }
        
        .featured-author {
            display: flex;
            align-items: center;
        }
        
        .featured-author-image {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 0.8rem;
            object-fit: cover;
        }
        
        .featured-author-info {
